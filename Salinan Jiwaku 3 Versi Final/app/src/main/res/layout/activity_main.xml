<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:background="@drawable/flashscreen"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ellipseLogo"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/logoAplikasi"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/ellipseLogo"
        app:layout_constraintEnd_toEndOf="@+id/ellipseLogo"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/ellipseLogo"
        app:layout_constraintTop_toTopOf="@+id/ellipseLogo"
        app:layout_constraintVertical_bias="0.356"
        app:srcCompat="@drawable/logo_apk" />

    <TextView
        android:id="@+id/logoTeks"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/teksLogo"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/ellipseLogo"
        app:layout_constraintEnd_toEndOf="@+id/ellipseLogo"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/ellipseLogo"
        app:layout_constraintTop_toBottomOf="@+id/logoAplikasi"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>